<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.the_spartan.virtualdiary">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/diary_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/diary_icon"
        android:testOnly="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".activity.NewItemActivity"
            android:theme="@style/ToolbarThemeWithNoActionBar"/>
        <activity android:name=".activity.ToDoFragment"
            android:theme="@style/ToolbarThemeWithNoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".data.ToDoProvider"
            android:authorities="to.do.authority"
            android:enabled="true"
            android:exported="false" />
        <provider
            android:name=".data.NoteProvider"
            android:authorities="com.the_spartan.virtualdiary"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6572007445610561~2773371688" />

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/ToolbarThemeWithNoActionBar">
            <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />
        </activity>
        <activity
            android:name=".activity.CreateNoteActivity"
            android:theme="@style/ToolbarThemeWithNoActionBar" />

        <activity
            android:name=".activity.settings.FontStyleActivity"
            android:theme="@style/MyPreferenceTheme" />

        <service android:name=".service.NotificationService" />

        <activity
            android:name=".activity.settings.FontColorActivity"
            android:theme="@style/ToolbarThemeWithNoActionBar" />
        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/ToolbarThemeWithNoActionBar" />

        <receiver android:name=".service.NotificationBroadcastReceiver" />

        <activity
            android:name=".activity.GoogleSigninActivity"
            android:theme="@style/ToolbarThemeWithNoActionBar">
            <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />
        </activity>

        <activity
            android:name=".activity.PasswordActivity"
            android:theme="@style/ToolbarThemeWithNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>