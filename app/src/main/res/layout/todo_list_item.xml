<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:backgroundTint="#10000000"
    card_view:cardElevation="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/cbItemCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:layout_marginEnd="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cbItemCheck"
            android:layout_toEndOf="@+id/cbItemCheck"
            android:fontFamily="sans-serif"
            android:maxLength="20"
            android:text="Test todo"
            android:maxLines="1"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvItemPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvItem"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:layout_marginRight="4dp"
            android:textColor="@color/colorPrimary"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/tvDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_toEndOf="@+id/cbItemCheck"
            android:layout_marginLeft="4dp"
            android:textColor="#373737"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_todo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItem"
            android:layout_toEndOf="@id/tvDueDate"
            android:layout_marginLeft="8dp"
            android:textColor="#373737"
            android:textSize="12sp"
            android:layout_toRightOf="@id/tvDueDate"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>